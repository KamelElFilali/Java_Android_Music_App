<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_backgroud_color"
    tools:context=".LoginFingerPrint">
<LinearLayout
    android:id="@+id/layoutTitre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_titre_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:scaleType="center"
        android:text="Liberty Play"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/logo_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_titre_site"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        android:src="@drawable/logo_liberty_play_gradient" />

</LinearLayout>


    <LinearLayout
        android:id="@+id/layoutFingerPrint"
        android:layout_below="@+id/layoutTitre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:id="@+id/textFingerPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:scaleType="center"
        android:text="Connectez vous"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textFingerPrint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:scaleType="center"
        android:text="avec votre empreinte"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/logoFingerPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFingerPrint2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/icone_fingerprint_white" />


</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

<!--            <Button-->
<!--                android:id="@+id/btn_authentification_finger"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginRight="110dp"-->
<!--                android:layout_marginLeft="110dp"-->
<!--                android:background="@drawable/rounded_corner_button_transparence"-->
<!--                android:text="Authentification"-->
<!--                android:textColor="@android:color/white" />-->



            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadowRadius="5dp"
                app:sl_shadowColor="#81000000"
                app:sl_dx="7dp"
                app:sl_dy="8dp"
                app:sl_cornerRadius="10dp">

                <Button
                    android:id="@+id/btn_authentification_finger"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="S'identifier"
                    android:textSize="15dp"
                    android:background="@drawable/rect_shadow_button_black"
                    android:textColor="@color/white"
                    />

            </com.dd.ShadowLayout>



        </LinearLayout>





    </LinearLayout>



</RelativeLayout>