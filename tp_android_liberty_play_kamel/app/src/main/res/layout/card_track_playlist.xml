<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="250dp"
    android:layout_height="300dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
    android:background="@drawable/rounded_corner_white_card_album"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_track_playlist"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_liberty_play_gradient"/>


    <TextView
        android:id="@+id/titre_track_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Malheur"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"/>

    <!--        <view-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="1dp"-->
    <!--            android:background="@color/black"/>-->


    <Button
        android:id="@+id/btn_ecouter_track_playlist"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="Ecouter"
        android:textColor="@color/white"
        android:background="@color/black"/>





</LinearLayout>



</LinearLayout>