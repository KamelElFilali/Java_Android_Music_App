<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".CardAlbumRecherche">

    <LinearLayout
    android:layout_width="250dp"
    android:layout_height="300dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corner_white_card_album"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_album_resultat_recherche"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_album"/>


    <TextView
        android:id="@+id/titre_album_resultat_recherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maitre gims - Pillule Rouge"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"/>

    <!--        <view-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="1dp"-->
    <!--            android:background="@color/black"/>-->




    <Button
        android:id="@+id/btn_details_album_recherche"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="Details"
        android:textColor="@color/white"
        android:background="@color/black"/>





</LinearLayout>



</LinearLayout>